<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingBottom="100dp"
        tools:context=".signed_in_fragments.FindLiftFragment">

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_search_for_a_ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Search for a ride"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_from_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="From"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/fragment_find_lift_div_from"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="From address:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fragment_find_lift_et_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_find_lift_side_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/fragment_find_lift_side_margin"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/fragment_find_lift_tv_max_dep_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_find_lift_side_margin"
            android:layout_marginTop="@dimen/fragment_find_lift_input_label_top_margin"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/max_departure_distance"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fragment_find_lift_et_dist_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="number"
            android:text="@string/default_distance_range" />

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_earliest_dep_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="@dimen/fragment_find_lift_input_label_top_margin"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/earliest_departure_date"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fragment_find_lift_et_earliest_dep_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_find_lift_side_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/fragment_find_lift_side_margin"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="none" />

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_earliest_dep_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/fragment_find_lift_input_label_top_margin"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/earliest_departure_time"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fragment_find_lift_et_earliest_dep_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_find_lift_side_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/fragment_find_lift_side_margin"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="none" />

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_latest_dep_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="@dimen/fragment_find_lift_input_label_top_margin"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/latest_departure_date"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fragment_find_lift_et_latest_dep_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="17dp"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="date"/>

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_latest_dep_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="@dimen/fragment_find_lift_input_label_top_margin"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/latest_departure_time"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fragment_find_lift_et_latest_dep_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="17dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="time"/>

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_destination_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/destination"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/fragment_find_lift_div_destination"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/fragment_find_lift_tv_label_to_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/destination_address"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fragment_find_lift_et_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_find_lift_side_margin"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/fragment_find_lift_tv_max_to_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_find_lift_side_margin"
            android:layout_marginTop="@dimen/fragment_find_lift_input_label_top_margin"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/max_arrival_distance"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fragment_find_lift_et_dist_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="number"
            android:text="@string/default_distance_range"/>

        <ImageButton
            android:id="@+id/fragment_find_lift_but_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/search_button_background"
            android:scaleType="center"
            android:src="@drawable/search_icon" />

    </LinearLayout>
</ScrollView>
